@echo off
chcp 65001 >nul
echo ========================================
echo Деплой изменений на GitHub Pages
echo ========================================
echo.

cd /d "%~dp0"

echo Проверка статуса Git...
git status

echo.
echo Добавление всех изменений...
git add .

echo.
echo Создание коммита...
git commit -m "Обновление баннера: перемещение кнопки и изменение стилей"

echo.
echo Отправка изменений на GitHub...
git push

echo.
echo ========================================
echo Готово! Изменения отправлены.
echo ========================================
pause
